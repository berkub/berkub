<%= simple_form_for :session, url: sessions_path, html: { data: { validate: "parsley" } } do |f| %>
  <h1><%= t("sessions.new.title") %></h1>

  <%= f.input :email, autofocus: true %>
  <%= f.input :password %>

  <div class="actions">
    <div class="forgot-password">
      <%= link_to t("passwords.recover"), new_password_path %>
    </div>
    <%= f.button :submit, t("helpers.submit.session.create") %>
  </div>
<% end  %>