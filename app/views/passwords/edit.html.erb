<%= simple_form_for @user, url: password_path(params[:id]), html: { data: { validate: "parsley" }, class: "password" } do |f| %>
  <h1><%= t("passwords.edit.title") %></h1>

  <%= f.input :password, autofocus: true %>
  <%= f.input :password_confirmation, input_html: { "parsley-equalto" => "#user_password" } %>

  <div class="actions">
    <%= f.button :submit, t("helpers.submit.password.update") %>
  </div>
<% end %>